@model IEnumerable<SportStore.Web.Models.Product>
@{
    ViewBag.Title = "All products";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">Id</th>
        <th>Name</th>
        <th class="text-right">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td class="text-right">@p.ProductId</td>
            <td>@p.Name</td>
            <td class="text-right">@p.Price</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-productId="@p.ProductId">Edit</a>
                    <input type="hidden" name="productId" value="@p.ProductId"/>
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Create product</a>
</div>